FROM nvidia/cuda:12.1.1-runtime-ubuntu22.04

RUN apt-get update && \
    apt-get install -y --no-install-recommends python3.11 python3-pip python3.11-venv && \
    rm -rf /var/lib/apt/lists/*

WORKDIR /app
COPY requirements/asr.txt requirements.txt
RUN pip install --no-cache-dir -r requirements.txt

COPY common/ common/
COPY asr_service/ asr_service/

EXPOSE 8001
CMD ["python3", "-m", "uvicorn", "asr_service.main:app", "--host", "0.0.0.0", "--port", "8001"]
